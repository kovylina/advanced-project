extends ../main.layout.pug

block variables
  - var title = 'Обо мне'
  - 
    var socials = [
      ['vk', 'http://vk.com'],
      ['github', 'http://gh.com'],
      ['in', 'http://in.com']]  
  - 
    var skills = [
      ['Frontend', [['HTML5', 30], ['CSS3', 50], ['JavaScript&amp;jQuery',70]]],
      ['Backend', [['PHP', 30], ['mySQL', 50], ['Node.js&amp;npm',70], ['Mongo.db',70]]],
      ['WorkFlow', [['Git', 30], ['Gulp', 50], ['Bower',70]]]]    
  - 
    var contacts = [
        ['skype', 'skype_kdn'], 
        ['envelope', 'astahov@gmail.com'],
        ['phone', '+7 931 200 9324'], 
        ['map_marker', 'г. Новосибирск, ул. Инская, д. 5']]          

block scripts
  script(src='about.bundle.js')

block content 
  section.hero
    .hero__header
      .hero__links   
        ul.socials
          each item in socials
            li.socials__item
              a(href=`${item[1]}`).socials__link
                +icon(item[0], 'socials__link-icon')

      .hero__menu
        a(href="#").hamburger-menu
          +icon('hamburger', 'hamburger-menu__img')
        
    .hero__title
      .section-title
        img(src="", alt="").section-title__pic
      .hero__user
        .user
          .user__avatar
            +image('user-avatar.jpg', 'Аватар', 'user__avatar-img')
          .user__description
            .user__name Владимир Астахов
            .user__info Личный сайт веб разработчика

    .hero__down_btns
      a(href="#").down-btn
        +icon('arrow_down', 'down-btn__img')

  section.about
    .triangle-page
      .triangle-page__col
        svg.triangle.triangle--fill-white  
      .triangle-page__col
        svg.triangle.triangle--fill-beige
    .about__content
      .about__left
        .about__left-title
          .block-title Обо мне
        .about__left-content
          .user-description
            .user-description__avatar
              +image('user-avatar.jpg', 'Аватар', 'user-description__avatar-img')
            .user-description__info 
              .user-description__title
                .block-subtitle Кто я
              .user-description__text.text-content
                p Я веб разработчик из Новосибирска. Мне 27 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                p Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво.
      .about__right
        .about__right-title
          .block-subtitle Чем я могу быть вам полезен
        .about__right-description.text-content
          p Больше всего меня привлекает Frontend разработка, но я также знаком и могу решать несложные задачи на Backend. Но давайте по порядку.
        .about__right-content
          ul.skills-list
            each skillrow in skills
              li.skills-list__item.skills-row
                .skills-row__title #{skillrow[0]}
                ul.skills-row__list
                  each skill in skillrow[1]
                    li.skills-row__item
                      figure.skill
                        svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill__figure
                          circle(cx="50" cy="50" r="40").skill__circle.skill__circle--under
                          circle(cx="50" cy="50" r="40").skill__circle.skill__circle--above
                        .skill__title #{skill[0]}    

  section.map
    .google-map
    .map__data
      .contacts
        .contacts__title
          h2.block-subtitle Контакты
            address.contacts__data      
              ul.contacts__list
                each item in contacts
                  li.contacts__item.contacts-row
                    .contacts-row.contacts__icon
                      +icon(`../${item[0]}`, 'contacts__icon-img')
                        .contacts-row.contacts__title #{item[1]}
                           